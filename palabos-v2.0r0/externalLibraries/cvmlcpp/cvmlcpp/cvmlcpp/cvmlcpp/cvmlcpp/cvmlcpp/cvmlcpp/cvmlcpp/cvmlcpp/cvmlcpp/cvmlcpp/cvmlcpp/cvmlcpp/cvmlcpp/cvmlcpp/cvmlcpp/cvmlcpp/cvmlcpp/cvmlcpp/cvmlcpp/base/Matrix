#ifndef CVMLCPP_MATRIX
#define CVMLCPP_MATRIX 1

#include <cstddef>

namespace cvmlcpp
{

template <typename T, std::size_t D, class DataHolder>
class Matrix;

template <typename T, std::size_t D>
class CompressedMatrix;

template <typename T>
class DynamicMatrix;

template <typename T>
class SymmetricMatrix;

} // namespace cvmlcpp

#include <cvmlcpp/base/Matrix.hpp>

#endif
