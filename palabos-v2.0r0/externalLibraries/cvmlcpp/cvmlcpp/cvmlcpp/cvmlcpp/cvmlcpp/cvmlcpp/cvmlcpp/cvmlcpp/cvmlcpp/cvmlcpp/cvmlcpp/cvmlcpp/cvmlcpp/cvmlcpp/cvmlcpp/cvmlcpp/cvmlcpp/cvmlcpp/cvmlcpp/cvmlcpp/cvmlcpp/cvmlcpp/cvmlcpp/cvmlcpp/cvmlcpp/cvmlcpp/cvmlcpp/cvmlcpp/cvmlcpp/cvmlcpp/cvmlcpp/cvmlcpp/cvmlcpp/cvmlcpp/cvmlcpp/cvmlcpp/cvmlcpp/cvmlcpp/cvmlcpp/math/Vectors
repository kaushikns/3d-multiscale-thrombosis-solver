#ifndef CVMLCPP_VECTORS
#define CVMLCPP_VECTORS 1

#include <cstddef>

namespace cvmlcpp
{

/**
 * A vector of arbitrary but fixed length.
 */
template <typename T, std::size_t DIMS>
class StaticVector;

/**
 * A vector of arbitrary length.
 */
template <class T>
class DynamicVector;

template <class T, std::size_t DIMS>
class StaticSortedVector;


template <typename T>
class DynamicSortedVector;

} // namespace cvmlcpp

#include <cvmlcpp/math/Vectors.hpp>

#endif
