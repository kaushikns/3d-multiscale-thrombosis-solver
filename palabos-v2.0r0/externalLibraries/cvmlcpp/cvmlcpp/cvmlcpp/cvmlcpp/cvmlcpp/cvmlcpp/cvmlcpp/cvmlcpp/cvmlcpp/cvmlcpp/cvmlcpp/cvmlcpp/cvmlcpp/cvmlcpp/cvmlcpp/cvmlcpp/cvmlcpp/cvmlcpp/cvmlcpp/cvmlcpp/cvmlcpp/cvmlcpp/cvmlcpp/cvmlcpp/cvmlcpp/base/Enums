#ifndef CVMLCPP_ENUMS
#define CVMLCPP_ENUMS 1

// The three principal directions.
enum {X, Y, Z};

// RGB Colors
enum {RED, GREEN, BLUE, ALPHA};

// CMYK Colors
enum {CYAN, MAGENTA, YELLOW, BLACK};

// Points of a Facet or Rectangle
enum {A, B, C, D};

// Points of a Diamond
enum {TOP, LEFT, BOTTOM, RIGHT, CENTER};

// Dimensions of an image
enum {HEIGHT, WIDTH};

#endif
